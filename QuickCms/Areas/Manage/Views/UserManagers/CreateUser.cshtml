@model CreateUserViewModel
@{
    ViewData["Title"] = "createUser";
}

<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-header start -->
        <div class="page-header">
            <div class="row align-items-end">
                <div class="col-lg-8">
                    <div class="page-header-title">
                        <div class="d-inline">
                            <h4></h4>
                            @*<span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="index-1.htm"> <i class="feather icon-home"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="List">مدیریت کاربران</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#!">افزودن کاربر</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Inputs Validation start -->
                    <div class="card">
                        <div class="card-header">
                            <h5 style="color:white">فرم ثبت نام</h5>


                        </div>
                        <div class="card-block">
                            <form id="frmCreateUser" enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="FirstName">
                                        <span class="text-danger" asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">نام خانوادگی</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="LastName">
                                        <span class="text-danger" asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">نام کاربری</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="UserName">
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">رمزعبور</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">تکرار رمز عبور</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="RepeatPassword">
                                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">  آپلود تصویر</label>
                                    <div class="col-sm-10">
                                        <input type="file" name="files" id="filer_input" accept="image/*">

                                    </div>
                                </div>
                                <input type="hidden" id="Photo" name="Photo" />
                                @*<div class="card">
                                        <div class="card-header">
                                            آپلود تصویر

                                        </div>
                                        <div class="card-block">
                                            <input type="file" name="files[]" id="filer_input" multiple="multiple">
                                        </div>
                                    </div>*@
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">موبایل</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="PhoneNumber">
                                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-sm-2 col-form-label">جنسیت</label>
                                    <div class="col-sm-10">
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="gender" id="gender-1" value="1"> پسر
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="gender" id="gender-2" value="0"> دختر
                                            </label>
                                        </div>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2"></label>
                                    <div class="col-sm-10">
                                        <button id="btnCreate" type="submit" class="btn btn-primary m-b-0">ثبت نام</button>
                                    </div>
                                </div>

                                <div id="allError" class="text-danger"></div>
                            </form>
                        </div>

                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Manage/scripts/UserManage/CreateUser.js"></script>
}
